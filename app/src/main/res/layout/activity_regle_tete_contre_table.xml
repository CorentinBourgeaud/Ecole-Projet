<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Activités.RegleTeteContreTable"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="425dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5pt"
        android:background="@drawable/border"
        android:text="Règles Tête Contre Table"
        android:textSize="25dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="502dp"
        android:gravity="center"
        android:textSize="30dp"
        android:text="Mathématiques : Remplis toutes les tables de multiplication sans te tromper. Attention : la moindre erreur te fait perdre l’exercice !" />

    <Button
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:onClick="retour"
        android:text="Retour" />

</LinearLayout>