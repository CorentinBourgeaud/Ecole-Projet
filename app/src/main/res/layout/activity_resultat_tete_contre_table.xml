<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Activités.ResultatTeteContreTable"
    android:orientation="vertical"
    android:background="#2596be">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FÉLICITATIONS !!"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Choisir une autre table"
        android:onClick="changeChoixTeteContreTable"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="427dp"
        android:text=""
        android:textSize="30dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Choisir un autre exercice"
        android:onClick="changeMaths"/>

</LinearLayout>