<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Activités.ChoixGuessTheAnimal"
    android:orientation="vertical"
    android:background="@drawable/bg">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="Guess the animal! Whose sound is that?"
        android:textSize="20dp"
        android:layout_gravity="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play"
        android:onClick="play"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="127dp"
            android:layout_height="135dp"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:id="@+id/btn1"

            />

        <Button
            android:layout_width="127dp"
            android:layout_height="135dp"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:id="@+id/btn2"


            />

        <Button
            android:layout_width="127dp"
            android:layout_height="135dp"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:id="@+id/btn3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="\n   You won! \n   It was a dog."
            android:textSize="25dp"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:id="@+id/textGame"
            />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/dog"
        android:visibility="invisible"
        android:id="@+id/imgwin"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de rounds joués : 0"/>
    <TextView
        android:id="@+id/textWin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de rounds gagnés : 0"/>
    <TextView
        android:id="@+id/textLose"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Nombre de rounds perdus : 0"/>

    <Button
        android:layout_width="376dp"
        android:layout_height="91dp"
        android:layout_gravity="center"
        android:onClick="retour"
        android:text="Retour" />


</LinearLayout>