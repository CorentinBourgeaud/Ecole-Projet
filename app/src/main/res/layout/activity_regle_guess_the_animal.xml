<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Activités.RegleGuessTheAnimal"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="425dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5pt"
        android:background="@drawable/border"
        android:text="Rules - Guess the Animal"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:gravity="center"
        android:textSize="30dp"
        android:text="You’re about to hear an animal making noise: guess what animal it is, and win the game!
\n\nTu vas entendre des bruits d’animaux. Devine de quel animal il s’agit pour remporter la partie !
"/>



    <Button
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:onClick="retour"
        android:text="Retour" />

</LinearLayout>